{
  "name": "audio-prime",
  "version": "1.0.0",
  "description": "Professional web-based audio spectrum analyzer with full OMEGA feature parity",
  "homepage": "https://github.com/jason-holt/audio-prime",
  "main": "dist-electron/main.js",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build && electron-builder",
    "preview": "vite preview",
    "electron:dev": "vite build && electron .",
    "electron:build": "electron-builder",
    "lint": "eslint src electron",
    "lint:fix": "eslint src electron --fix",
    "lint:security": "eslint src electron --rule 'security/*: error'",
    "format": "prettier --write \"src/**/*.{ts,svelte,css,json}\"",
    "type-check": "tsc --noEmit",
    "test": "vitest",
    "test:ui": "vitest --ui"
  },
  "keywords": [
    "audio",
    "spectrum",
    "analyzer",
    "visualizer",
    "webgl",
    "electron",
    "svelte",
    "fft",
    "lufs",
    "metering"
  ],
  "author": {
    "name": "Jason Holt",
    "email": "jason-holt@users.noreply.github.com"
  },
  "license": "MIT",
  "dependencies": {
    "comlink": "^4.4.1",
    "dotenv": "^17.2.3",
    "fft.js": "^4.0.4",
    "interactjs": "^1.10.27"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@sveltejs/vite-plugin-svelte": "^5.0.0",
    "@types/node": "^22.0.0",
    "@typescript-eslint/eslint-plugin": "^8.50.0",
    "@typescript-eslint/parser": "^8.50.0",
    "electron": "^35.7.5",
    "electron-builder": "^25.0.0",
    "eslint": "^9.39.2",
    "eslint-plugin-no-secrets": "^2.2.1",
    "eslint-plugin-security": "^3.0.1",
    "eslint-plugin-svelte": "^2.46.1",
    "globals": "^16.5.0",
    "license-checker": "^25.0.1",
    "prettier": "^3.4.0",
    "prettier-plugin-svelte": "^3.3.0",
    "svelte": "^5.0.0",
    "svelte-check": "^4.0.0",
    "svelte-eslint-parser": "^1.4.1",
    "tslib": "^2.8.0",
    "typescript": "^5.7.0",
    "typescript-eslint": "^8.50.0",
    "vite": "^6.0.0",
    "vite-plugin-electron": "^0.28.0",
    "vite-plugin-electron-renderer": "^0.14.5",
    "vitest": "^2.0.0"
  },
  "build": {
    "appId": "com.audioprime.app",
    "productName": "AUDIO_PRIME",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "dist-electron/**/*"
    ],
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ],
      "icon": "assets/icon.png",
      "category": "AudioVideo",
      "maintainer": "Jason Holt <jason-holt@users.noreply.github.com>"
    },
    "mac": {
      "target": "dmg"
    },
    "win": {
      "target": "nsis"
    }
  }
}
